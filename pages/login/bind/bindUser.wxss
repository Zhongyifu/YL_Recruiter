/* pages/login/bindUser.wxss */

.page_hd {
  text-align: center;
}

.page_hd image{
  width: 150rpx;
  height: 150rpx;
  padding: 55rpx 0rpx;
}

.inputArea .weui-cells {
  width: 90%;
  margin: 0 auto;
  box-shadow: 0px 5px 5px #ccc;
}

.inputArea input {
  border-bottom: 1px solid #ccc;
  padding: 5px 10rpx;
}

.inputArea .weui-cells:before {
  border: 0;
}

.inputArea .weui-cells:after {
  border: 0;
}

.inputArea .weui-cell:before {
  border: 0;
}

.inputArea .weui-cell__ft button {
  font-size: 25rpx;
}
.weui-btn-area{
  width: 80%;
  margin: 0 auto;
  margin-top: 48px;
}