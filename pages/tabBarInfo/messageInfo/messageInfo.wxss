/* pages/tabBarInfo/messageInfo/messageInfo.wxss */
.page {
    height: auto;
}
.page_hd {
    position: fixed;
    top: 0rpx;
    width: 100%;
    z-index: 999;
}

.page_hd .seekerInfo {
    padding-top: 15rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ccc;
    height: 100rpx;
    width: 100%;
    text-align: center;
    font-size: 10pt;
}

.page_hd .functionArea {
    width: 100%;
    height: 135rpx;
    display: flex;
    color: #1f82b9;
    background-color: #fff;
}

.page_hd .functionArea>view {
    width: 25%;
    text-align: center;
}

.page_hd .functionArea>view>icon {
    font-size: 25pt;
    vertical-align: inherit;
}

.page_hd .functionArea>view view {
    margin-top: -15rpx;
}

.page_bd {
    box-sizing: border-box;
}

.page_bd>.occupyTop {
    height: 255rpx;
}

.page_bd>.content {
    height: 100%;
    padding-top: 15rpx;
    overflow-y: scroll;
}

.page_bd .content .headP {
    margin-right: 15rpx;
    margin-left: 15rpx;
    width: 120rpx;
}

.page_bd .content .headP>image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.page_bd .content .sendContent>text{
    font-size: 11pt;
    border-radius: 5rpx;
    background-color: #fff;
    min-height: 55rpx;
    padding: 10rpx 15rpx;
    line-height: 105rpx;
    position: relative;
}

.page_bd>.content>.initiator {
    width: 100%;
    text-align: right;
    min-height: 115rpx;
}

.page_bd .initiator>.headP {
    float: right;
}

.page_bd .initiator>.sendContent {
    margin-right: 15rpx;
}

.page_bd .initiator>.sendContent>text::after {
    content: '';
    border: 8px solid #ffffff00;
    border-left: 8px solid #fff;
    position: absolute;
    top: 6px;
    right: -16px;

}

.page_bd>.content>.receiver {
    display: flex;
    width: 100%;
}

.page_bd .receiver>.sendContent>text::after {
    content: '';
    border: 8px solid #ffffff00;
    border-right: 8px solid #fff;
    position: absolute;
    top: 6px;
    left: -16px;
}


.page_bd>.occupyBottom {
    height: 111rpx;
}

.page_foot {
    position: fixed;
    bottom: 0px;
    height: 110rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    z-index: 999;
}

.page_foot>.easySend {
    width: 18%;
}

.page_foot>.easySend>button {
    padding: 12rpx;
    font-size: 12pt;
    margin-top: 5px;
    line-height: 1.5;
    width: 60px;
}

.page_foot>.typingArea {
    width: 63%;
}

.page_foot>.typingArea>textarea {
    border: 1px solid #abd0e4;
    height: 65rpx;
    width: 98%;
    margin-top: 10rpx;
    padding: 10rpx 0rpx 0rpx 8rpx;
    border-radius: 5rpx;
    resize: none;
}

.page_foot>.sendBtn {
    width: 19%;
}

.page_foot>.sendBtn>button {
    padding: 12rpx;
    font-size: 12pt;
    margin-top: 5px;
    line-height: 1.5;
    width: 60px;
}