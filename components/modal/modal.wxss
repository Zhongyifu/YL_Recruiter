.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 10;
  transition: all 300ms ease-out;
}

/*弹出模态框*/

.mymodal {
  width: 90%;
  position: fixed;
  z-index: 999;
  background: white;
  height: 460px;
  border-radius: 10rpx;
  transition: all 300ms ease-out;
}

.mymodal .mymodal-title {
  font-size: 30rpx;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ddd;
  color: #666;
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mymodal .mymodal-content {
  padding: 8px 8px;
  min-height: 320px;
  overflow: scroll;
}
